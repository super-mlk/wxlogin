/* pages/scroll-view-y/scroll-view-y.wxss */

.sv {
  width: 100%;
  height: 800px;
  position: relative;
}


.banner {
  width: 100%;
  height: 150px;
}

.banner image {
  width: 100%;
  height: 150px;
  display: inline-block;
  overflow: hidden;
}

/*tab  */

.nav {
  height: 88rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #fff;
  font-size: 16px;
  white-space: nowrap;
  border-bottom: 1px solid #ccc;
}

.nav-item {
  display: inline-block;
  text-align: center;
  font-size: 14px;
  height: 35px;
  margin-right: 10px;
}

.nav-item.active {
  color: #2da1dc;
  border-bottom: 2px solid #2da1dc;
}

/*专家列表  */

.content{
  margin-top: 10px;
}


.content .specialist {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: row;
  margin-bottom: 20px;
  position: relative;
}

.content .specialist .person-pic {
  width: 30%;
  height: 100px;
}

.content .specialist .person-pic image {
  width: 100%;
  height: 100px;
}

.content .specialist .article {
  width: 65%;
  height: 100px;
  margin-left: 5%;
}

.content .specialist .article text {
  width: 100%;
  height: auto;
  display: block;
  margin-bottom: 8px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.content .specialist .article .title {
  font-size: 16px;
  font-weight: bold;
}

.content .specialist .article .synopsis {
  font-size: 13px;
  color: #808080;
}

.specialist .article .update {
  width: 100%;
  height: auto;
  font-size: 12px;
  color: #808080;
  padding-top: 2px;
  padding-bottom: 2px;
}

.content .specialist .article .extra {
  font-size: 13px;
  color: #4c4c4c;
  margin-bottom: 0;
}

.content .specialist .info {
  width: auto;
  height: auto;
  position: absolute;
  right: 10px;
  top: 2px;
}

.content .specialist .info text {
  width: 100%;
  height: auto;
  display: block;
  font-size: 10px;
  color: #999;
  text-align: right;
}

.content .specialist .info text:first-child {
  font-size: 14px;
  color: #ff6f07;
  padding-bottom: 4px;
  
}

.active1 {
  position: fixed;
  top: 0;
  left: 0;
  background: #fff;
  z-index: 99;
}

/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.left{
  width: 40%;
  height: 100px;
  float: left;
}

.left image{
  width: 100%;
  height: 80px;
}

.right{
  width: 60%;
  height: 100px;
  float: right
}
.right text{
  width: 100%;
  height: auto;
  display: block;
  font-size: 12px;
}